" i like syntax highlighting
syntax on

" ruler on left side of screen
set number

" enable cusor line
"set cursorline

" highlight cursorline
"highlight cursorline term=reverse cterm=reverse guibg=Grey90

" expand tab to spaces
set expandtab

" number of spaces to insert as tab
set tabstop=2
set shiftwidth=2

" for some reason backspace stoped working, reintroduce 'defaults'
set backspace=indent,eol,start
